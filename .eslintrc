{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "google",
    "rules": {
        "arrow-parens": [1, "as-needed"],

        "valid-jsdoc": "off",

        // spacing
        "no-multiple-empty-lines": [ 2, { "max": 1, "maxEOF": 0, "maxBOF": 0 } ],

        // strings
        "quotes": [ 2, "single", "avoid-escape" ],

        // code arrangement matter
        "no-use-before-define": [ 2, { "functions": false } ],

        // make it meaningful
        "prefer-const": 1,

        // keep it simple
        "complexity": [ 1, 5 ]
    }
}
